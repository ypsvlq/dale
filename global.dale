toolchain(msvc)
	lang: c
	find: cl link lib
	objext: .obj
	libext: .lib
	libpfx: /DEFAULTLIB:
	incpfx: /I
	defpfx: /D
	compile: $CL $CFLAGS /M$[!msvc_staticcrt D]$[msvc_staticcrt T]$[dll  /LD]$[debug d /Zi /FS /Fd:$_bdir/$task] $[optfast /O2] $[optsize /O1] /nologo /c /Fo:$out $in
	linkexe: $LINK $LFLAGS $LEFLAGS $[debug /DEBUG] /NOLOGO /OUT:$out $in $LIBS
	linklib: $LIB $LLFLAGS /NOLOGO /OUT:$out $in
	linkdll: $LINK $LFLAGS $LDFLAGS $[debug /DEBUG] /NOLOGO /DLL /OUT:$out $in $LIBS

toolchain(clang)
	lang: c
	find: clang ar
	objext: .o
	libext: .a
	libpfx: -l
	incpfx: -I
	defpfx: -D
	compile: $CLANG $CFLAGS $[debug -g] $[optfast -O3] $[optsize -Oz] $[lib -fPIC] $[dll -fPIC] -c -o $out $in
	linkexe: $CLANG $LFLAGS $LEFLAGS -o $out $in $LIBS
	linklib: $AR -rc $LLFLAGS $out $in
	linkdll: $CLANG $LFLAGS $LDFLAGS -shared -o $out $in $LIBS

