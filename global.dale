build(c)
	bdir ?= build
	objdir ?= $bdir/$(_task)_obj
	outdir ?= $bdir

	LIBS += ${map lib l $libpfx$l} $($(_task)_LIBS)
	CFLAGS += ${map inc i $incpfx$i} ${map def d $defpfx$d} $($(_task)_CFLAGS)

	src = ${map src s ${glob $s}}
	obj = ${map src s $objdir/${stripext $s}$objext}
	out = $outdir/$_task$($(_type)ext)

	@mkdirs obj
	@mkdirs out

	@do Compile obj src
	@do Link out obj
