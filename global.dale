build(c)
	bdir ?= build
	objdir ?= $bdir/$(_task)_obj
	outdir ?= $bdir

	LIBS += ${map lib $libpfx$_} $($(_task)_LIBS)
	CFLAGS += ${map inc $incpfx$_} ${map def $defpfx$_} $($(_task)_CFLAGS)

	src = ${map src ${glob $_}}
	obj = ${map src $objdir/${stripext $_}$objext}
	out = $outdir/$_task$($(_type)ext)

	@mkdirs obj
	@mkdirs out

	@do Compile obj src
	@do Link out obj
